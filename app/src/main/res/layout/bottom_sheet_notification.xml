<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvNotificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tech Talk: AI in Business"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="12dp" />

    <!-- Date & Time -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan 26, 2025, 11:00 AM - 12:30 PM"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_event" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Virtual Meeting"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Buttons -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send a question about the event"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_btn"
        android:backgroundTint="@color/gray_separator"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:drawableStart="@drawable/ic_quetion"
        android:drawablePadding="8dp"
        android:paddingHorizontal="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_btn"
        android:backgroundTint="@color/gray_separator"
        android:text="Add to my calendar"
        android:textAllCaps="false"
        android:paddingHorizontal="15dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_calendar"
        android:drawablePadding="8dp" />

    <!-- Cancel Registration -->
    <Button
        android:id="@+id/btnCancelRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Registration"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp" />

    <!-- Close -->
    <TextView
        android:id="@+id/tvClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:padding="8dp" />

</LinearLayout>
